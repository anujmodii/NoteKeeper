<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <GridLayout
        android:id="@+id/noteItemLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:rowCount="2"
        android:columnCount="3"
        tools:ignore="MissingConstraints">
        <TextView
            android:id="@+id/titleTextNoteItem"
            android:layout_margin="2dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Title"
            android:textColor="#000000"
            android:textSize="25sp"
            android:layout_gravity="fill"
            android:padding="10dp"
            android:layout_rowSpan="2"/>
        <TextView
            android:id="@+id/priorityLevelNoteItem"
            android:layout_margin="2dp"
            android:layout_marginTop="10dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:textSize="10sp"
            android:background="@drawable/priority_background"/>
        <TextView
            android:id="@+id/importanceLevelNoteItem"
            android:layout_margin="2dp"
            android:layout_marginTop="10dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:textSize="10sp"
            android:textColor="#FFFFFF"
            android:background="@drawable/importance_background"/>
        <TextView
            android:id="@+id/dateNoteItem"
            android:layout_margin="2dp"
            android:padding="1dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Date"
            android:textColor="@color/colorPrimaryDark"
            android:layout_columnSpan="2"
            android:gravity="center"
            android:textSize="10sp"/>
    </GridLayout>
</androidx.constraintlayout.widget.ConstraintLayout>